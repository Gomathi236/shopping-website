extends layout/main-page.pug

block styles 
    link(rel='stylesheet' href='../public/css/shop.css')

block content
    body 
        header.main-header 
            nav.main-header__nav 
                ul.main-header__item-list 
                    li.main-header__item
                        a.active(href="/",class=(path === '/' ? 'active' : ''))  Home 
                    li.main-header__item
                        a.active(href="/admin/add-product", class=(path === '/admin/add-product' ? 'active' : ''))  Add Products
    main
        if prods.length > 0
            .grid 
                each products in prods
                    article.card.product-item 
                        header.card__header
                            h1.product__title #{products.title} 
                        div.card__image
                            img(src="https://images.unsplash.com/photo-1589998059171-988d887df646?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxzZWFyY2h8MXx8b3BlbiUyMGJvb2t8ZW58MHx8MHx8&w=1000&q=80", alt="Book")
                        div.card__content
                            h2.product__price $12
                            p.product__description A very interesting Book that has many information 
                        div.card__actions
                            button.btn Add To Cart
        else 
            h1 No Products


   
        




